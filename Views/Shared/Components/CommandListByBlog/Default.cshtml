@model IEnumerable<Entity_Layer.Concrete.Command>

<div class="comment-top">

    @if (Model.Count() > 0)
    {
        <h3 class="text-primary">Yorumlar</h3>
    }
    else
    {
        <h4>Hiç Yorum Yapılmamış. İlk Yorumu Sen Yap</h4>
    }

    <br />

    @foreach (var item in Model)
    {

        <div class="media">
            <img src="~/CoreBlogTema/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommandUsername</h5>

                <div class="row"> <h6 class="p-1 pl-1"> <b>  @item.CommandTitle :  </b> </h6>   <h6 class="p-1">    @item.CommandContent  </h6> </div>

                <br />
            </div>
        </div>

    }

</div>