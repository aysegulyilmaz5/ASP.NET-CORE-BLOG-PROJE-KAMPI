@model IEnumerable<Entity_Layer.Concrete.Blog>


@{
    ViewData["Title"] = "BlogDetails";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}





<!DOCTYPE html>
<html lang="zxx">


<body>

        <div class="container">
            <div class="row">
                <!--left-->
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">



                    @foreach (var item in Model)
                    {
                        <div class="blog-grid-top">
                            <div class="b-grid-top">
                                <div class="blog_info_left_grid">
                                    <a href="/Blog/WriterLastBlog">
                                        <img src="@item.BlogImage" class="img-fluid" alt="">
                                    </a>
                                </div>
                                <div class="blog-info-middle">
                                    <ul>
                                        <li>
                                            <a href="#">
                                                <i class="far fa-calendar-alt"></i> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))
                                            </a>
                                        </li>
                                        <li class="mx-2">
                                            <a href="#">
                                                <i class="far fa-thumbs-up"></i> 0 Likes
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <i class="far fa-comment"></i> 0 Comments
                                            </a>
                                        </li>

                                    </ul>
                                </div>
                            </div>


                        
                            <div class="jumbotron alert-success">
                                <h1 class="display-4 text-dark"> <b>  @item.BlogtTitle </b> </h1>

                               
                                

                            </div>

                            <br />

                            <h5>
                                @item.BlogContent
                            </h5>,
                            <br />
                            <a href="/Blog/Index/" class="btn btn-success">  Diğer Bloglar </a>
                            <br />
                        </div>

                    }

                   @*@await Component.InvokeAsync("CommandListByBlog", new { id = ViewBag.i }) *@




                   @* @await Html.PartialAsync("~/Views/Command/PartialAddCommand.cshtml", new { id = ViewBag.c })*@

                </div>

                <!--//left-->
                <!--right-->
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">

                    <div class="right-blog-info text-left">

                        @await Html.PartialAsync("~/Views/Newsletter/SubscribeMail.cshtml")


                        @await Component.InvokeAsync("CategoryList")

                        @await Component.InvokeAsync("WriterLastBlog")

      
                       

                </aside>
                <!--//right-->
            </div>
        </div>
    </section>


</body>

</html>

